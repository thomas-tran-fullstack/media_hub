<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Media Hub Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif;
            background: #f0f0f0;
        }

        .container {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: 260px;
            background: #39c46e;
            position: fixed;
            height: 100vh;
            padding: 20px;
            color: white;
        }

        .sidebar-header {
            display: flex;
            align-items: center;
            margin-bottom: 30px;
        }

        .menu-icon {
            width: 30px;
            height: 30px;
            cursor: pointer;
            margin-right: 15px;
        }

        .menu-icon div {
            width: 100%;
            height: 3px;
            background: white;
            margin: 5px 0;
            border-radius: 2px;
        }

        .logo {
            font-size: 24px;
            font-weight: bold;
            letter-spacing: 1px;
        }

        .user-info {
            display: flex;
            align-items: center;
            margin: 25px 0;
            padding: 15px;
            background: rgba(255, 255, 255, 0.15);
            border-radius: 10px;
        }

        .avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: #2a9d5f;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            margin-right: 12px;
        }

        .user-details {
            flex: 1;
        }

        .user-name {
            font-size: 13px;
            font-weight: 600;
            margin-bottom: 3px;
        }

        .user-id {
            font-size: 11px;
            opacity: 0.8;
        }

        .menu {
            list-style: none;
        }

        .menu-item {
            padding: 15px 20px;
            margin: 5px 0;
            border-radius: 8px;
            cursor: pointer;
            transition: background 0.3s;
            font-size: 16px;
        }

        .menu-item:hover {
            background: rgba(255, 255, 255, 0.2);
        }

        .menu-item.active {
            background: rgba(255, 255, 255, 0.3);
            font-weight: 600;
        }

        /* Main Content */
        .main-content {
            margin-left: 260px;
            flex: 1;
            padding: 30px;
        }

        /* Header Stats */
        .header-stats {
            background: linear-gradient(135deg, #7ed56f, #39c46e);
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 30px;
            color: white;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
            margin-top: 15px;
        }

        .stat-item {
            display: flex;
            align-items: center;
        }

        .stat-icon {
            width: 20px;
            height: 20px;
            margin-right: 10px;
        }

        .stat-icon::before {
            content: '‚óÜ';
            font-size: 18px;
        }

        .stat-text {
            font-size: 15px;
        }

        /* Campaign Section */
        .section {
            background: white;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 25px;
        }

        .section-title {
            font-size: 20px;
            font-weight: 600;
            color: #333;
            margin-bottom: 20px;
        }

        .campaign-tabs {
            display: flex;
            gap: 15px;
        }

        .campaign-tab {
            padding: 12px 25px;
            border-radius: 25px;
            border: none;
            cursor: pointer;
            font-size: 15px;
            font-weight: 500;
            transition: all 0.3s;
        }

        .campaign-tab.active {
            background: #39c46e;
            color: white;
        }

        .campaign-tab.pending {
            background: #e8f5e9;
            color: #39c46e;
        }

        /* Recent Content */
        .recent-content {
            display: grid;
            grid-template-columns: 1fr 2fr 1fr;
            gap: 20px;
        }

        .video-thumbnail {
            position: relative;
            border-radius: 12px;
            overflow: hidden;
            background: #2a9d5f;
            height: 180px;
        }

        .play-button {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 50px;
            height: 50px;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
        }

        .play-button::after {
            content: '‚ñ∂';
            margin-left: 3px;
            color: #333;
        }

        .content-card {
            background: #e8f5e9;
            border-radius: 12px;
            padding: 20px;
        }

        .content-title {
            font-size: 18px;
            font-weight: 600;
            color: #333;
            margin-bottom: 10px;
        }

        .content-date {
            font-size: 13px;
            color: #666;
            margin-bottom: 15px;
        }

        .content-platforms {
            display: flex;
            gap: 10px;
        }

        .platform-icon {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 14px;
            font-weight: bold;
        }

        .platform-icon.facebook {
            background: #1877f2;
            color: white;
        }

        .platform-icon.youtube {
            background: #ff0000;
            color: white;
        }

        /* Products Grid */
        .products-grid {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 15px;
        }

        .product-item {
            aspect-ratio: 1;
            border-radius: 16px;
            overflow: hidden;
            background: #ddd;
            position: relative;
            cursor: pointer;
            transition: transform 0.3s;
        }

        .product-item:hover {
            transform: scale(1.05);
        }

        .product-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .product-item.more {
            background: rgba(0, 0, 0, 0.6);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 16px;
            font-weight: 500;
        }

        /* Quick Action Button */
        .quick-action {
            position: fixed;
            bottom: 40px;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 60px;
            background: #39c46e;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: 0 4px 12px rgba(57, 196, 110, 0.4);
            transition: all 0.3s;
            border: none;
            font-size: 30px;
            color: white;
        }

        .quick-action:hover {
            transform: translateX(-50%) scale(1.1);
            box-shadow: 0 6px 16px rgba(57, 196, 110, 0.5);
        }

        /* Modal */
        .modal-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1000;
            align-items: center;
            justify-content: center;
        }

        .modal-overlay.active {
            display: flex;
        }

        .modal-content {
            background: white;
            width: 90%;
            max-width: 900px;
            max-height: 90vh;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
        }

        /* Modal Tabs */
        .modal-tabs {
            display: flex;
            background: #f5f5f5;
        }

        .modal-tab {
            flex: 1;
            padding: 20px;
            text-align: center;
            font-size: 18px;
            font-weight: 600;
            color: #666;
            background: #e0e0e0;
            border: none;
            cursor: pointer;
            transition: all 0.3s;
        }

        .modal-tab.active {
            background: white;
            color: #333;
        }

        /* Modal Body */
        .modal-body {
            padding: 30px;
            overflow-y: auto;
            max-height: calc(90vh - 70px);
        }

        .tab-content {
            display: none;
        }

        .tab-content.active {
            display: block;
        }

        /* Upload Area */
        .upload-area {
            display: flex;
            gap: 15px;
            margin-bottom: 25px;
        }

        .video-preview {
            width: 150px;
            height: 150px;
            border-radius: 12px;
            background: #f0f0f0;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
        }

        .video-preview img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .play-icon {
            position: absolute;
            width: 40px;
            height: 40px;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .play-icon::after {
            content: '‚ñ∂';
            margin-left: 2px;
        }

        .add-media {
            width: 150px;
            height: 150px;
            border: 2px dashed #ccc;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s;
            font-size: 40px;
            color: #999;
        }

        .add-media:hover {
            border-color: #39c46e;
            color: #39c46e;
        }

        /* Form Groups */
        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            font-size: 16px;
            font-weight: 600;
            color: #333;
            margin-bottom: 10px;
            display: block;
        }

        .form-textarea {
            width: 100%;
            min-height: 120px;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 12px;
            font-size: 14px;
            font-family: inherit;
            resize: vertical;
        }

        .form-textarea:focus {
            outline: none;
            border-color: #39c46e;
        }

        .tag-group {
            display: flex;
            gap: 10px;
            margin-top: 10px;
        }

        .tag {
            padding: 6px 15px;
            background: #e8f5e9;
            border-radius: 20px;
            font-size: 13px;
            color: #39c46e;
        }

        /* Platform Selection */
        .platform-select {
            display: flex;
            gap: 15px;
        }

        .platform-box {
            width: 80px;
            height: 80px;
            border: 2px solid #ddd;
            border-radius: 12px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s;
            position: relative;
        }

        .platform-box:hover {
            border-color: #39c46e;
        }

        .platform-box.selected {
            border-color: #1877f2;
            background: rgba(24, 119, 242, 0.1);
        }

        .platform-box.selected::after {
            content: '‚úì';
            position: absolute;
            top: 5px;
            right: 5px;
            width: 20px;
            height: 20px;
            background: #1877f2;
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 12px;
        }

        .platform-icon-large {
            width: 36px;
            height: 36px;
            margin-bottom: 5px;
        }

        .platform-name {
            font-size: 12px;
            color: #666;
        }

        /* DateTime Input */
        .datetime-input {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #ddd;
            border-radius: 12px;
            font-size: 14px;
            font-family: inherit;
        }

        .datetime-input:focus {
            outline: none;
            border-color: #39c46e;
        }

        /* Submit Button */
        .submit-btn {
            width: 100%;
            padding: 15px;
            background: #39c46e;
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
        }

        .submit-btn:hover {
            background: #2fb55f;
        }

        /* Livestream Options */
        .livestream-options {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 30px;
        }

        .option-card {
            border: 2px solid #e0e0e0;
            border-radius: 15px;
            padding: 25px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
        }

        .option-card:hover {
            border-color: #39c46e;
            box-shadow: 0 4px 12px rgba(57, 196, 110, 0.2);
        }

        .option-icon {
            width: 60px;
            height: 60px;
            background: #f0f0f0;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
            font-size: 30px;
        }

        .option-title {
            font-size: 16px;
            font-weight: 600;
            color: #333;
            margin-bottom: 8px;
        }

        .option-desc {
            font-size: 13px;
            color: #999;
            line-height: 1.5;
        }

        .option-button {
            width: 100%;
            padding: 12px;
            background: #e8f5e9;
            color: #39c46e;
            border: none;
            border-radius: 10px;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
            margin-top: 15px;
            transition: all 0.3s;
        }

        .option-button:hover {
            background: #39c46e;
            color: white;
        }

        /* Stream Status Tabs */
        .stream-tabs {
            display: flex;
            gap: 15px;
            margin-bottom: 25px;
        }

        .stream-tab {
            padding: 10px 20px;
            background: #f0f0f0;
            color: #666;
            border: none;
            border-radius: 25px;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .stream-tab.active {
            background: #39c46e;
            color: white;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            background: white;
            border-radius: 15px;
            border: 2px solid #f0f0f0;
        }

        .empty-icon {
            width: 80px;
            height: 80px;
            background: #f5f5f5;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            font-size: 40px;
        }

        .empty-title {
            font-size: 18px;
            font-weight: 600;
            color: #333;
            margin-bottom: 10px;
        }

        .empty-desc {
            font-size: 14px;
            color: #999;
            line-height: 1.6;
        }

        /* Responsive */
        @media (max-width: 1024px) {
            .products-grid {
                grid-template-columns: repeat(3, 1fr);
            }
            
            .recent-content {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 768px) {
            .sidebar {
                width: 200px;
            }
            
            .main-content {
                margin-left: 200px;
            }
            
            .stats-grid {
                grid-template-columns: 1fr;
            }
        }
        /* Analytics Page Styles */
.analytics-container {
    display: none;
}

.analytics-container.active {
    display: block;
}

.analytics-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
}

.analytics-title {
    font-size: 28px;
    font-weight: 700;
    color: #333;
}

.date-range-selector {
    display: flex;
    gap: 10px;
    align-items: center;
}

.date-range-btn {
    padding: 10px 20px;
    background: white;
    border: 1px solid #ddd;
    border-radius: 8px;
    cursor: pointer;
    font-size: 14px;
    transition: all 0.3s;
}

.date-range-btn:hover {
    border-color: #39c46e;
}

.date-range-btn.active {
    background: #39c46e;
    color: white;
    border-color: #39c46e;
}

/* Stats Cards */
.stats-cards {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
    margin-bottom: 30px;
}

.stat-card {
    background: white;
    border-radius: 15px;
    padding: 25px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s, box-shadow 0.3s;
}

.stat-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
}

.stat-card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
}

.stat-card-title {
    font-size: 14px;
    color: #666;
    font-weight: 500;
}

.stat-card-icon {
    width: 40px;
    height: 40px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
}

.stat-card-icon.revenue {
    background: #e3f2fd;
}

.stat-card-icon.sales {
    background: #f3e5f5;
}

.stat-card-icon.engagement {
    background: #fff3e0;
}

.stat-card-icon.multichannel {
    background: #e8f5e9;
}

.stat-card-value {
    font-size: 32px;
    font-weight: 700;
    color: #333;
    margin-bottom: 8px;
}

.stat-card-change {
    display: flex;
    align-items: center;
    gap: 5px;
    font-size: 13px;
}

.stat-card-change.positive {
    color: #39c46e;
}

.stat-card-change.negative {
    color: #f44336;
}

.stat-card-change::before {
    content: '‚Üë';
    font-size: 16px;
}

.stat-card-change.negative::before {
    content: '‚Üì';
}

/* Chart Section */
.chart-section {
    background: white;
    border-radius: 15px;
    padding: 25px;
    margin-bottom: 30px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.chart-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 25px;
}

.chart-title {
    font-size: 20px;
    font-weight: 600;
    color: #333;
}

.chart-tabs {
    display: flex;
    gap: 10px;
}

.chart-tab {
    padding: 8px 16px;
    background: #f5f5f5;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-size: 13px;
    color: #666;
    transition: all 0.3s;
}

.chart-tab:hover {
    background: #e0e0e0;
}

.chart-tab.active {
    background: #39c46e;
    color: white;
}

.chart-container {
    height: 350px;
    background: linear-gradient(to bottom, #f9f9f9 0%, white 100%);
    border-radius: 12px;
    padding: 20px;
    position: relative;
}

.chart-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: flex-end;
    justify-content: space-around;
    gap: 10px;
}

.chart-bar {
    flex: 1;
    background: linear-gradient(to top, #39c46e, #7ed56f);
    border-radius: 8px 8px 0 0;
    position: relative;
    transition: all 0.3s;
    cursor: pointer;
}

.chart-bar:hover {
    opacity: 0.8;
    transform: scaleY(1.05);
}

.chart-bar::after {
    content: attr(data-value);
    position: absolute;
    top: -25px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666;
    font-weight: 600;
}

/* Details Table */
.details-section {
    background: white;
    border-radius: 15px;
    padding: 25px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.details-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

.details-title {
    font-size: 20px;
    font-weight: 600;
    color: #333;
}

.filter-group {
    display: flex;
    gap: 10px;
    margin-bottom: 20px;
}

.filter-select {
    padding: 10px 15px;
    border: 1px solid #ddd;
    border-radius: 8px;
    font-size: 14px;
    cursor: pointer;
    background: white;
    min-width: 150px;
    transition: all 0.3s;
}

.filter-select:hover {
    border-color: #39c46e;
}

.filter-select:focus {
    outline: none;
    border-color: #39c46e;
}

.details-table {
    width: 100%;
    border-collapse: collapse;
}

.details-table thead {
    background: #f9f9f9;
}

.details-table th {
    padding: 15px;
    text-align: left;
    font-size: 13px;
    font-weight: 600;
    color: #666;
    border-bottom: 2px solid #e0e0e0;
}

.details-table td {
    padding: 15px;
    font-size: 14px;
    color: #333;
    border-bottom: 1px solid #f0f0f0;
}

.details-table tbody tr {
    transition: background 0.3s;
}

.details-table tbody tr:hover {
    background: #f9f9f9;
}

.channel-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 6px 12px;
    border-radius: 6px;
    font-size: 13px;
    font-weight: 500;
}

.channel-badge.facebook {
    background: #e3f2fd;
    color: #1877f2;
}

.channel-badge.tiktok {
    background: #fce4ec;
    color: #fe2c55;
}

.channel-badge.youtube {
    background: #ffebee;
    color: #ff0000;
}

.trend-indicator {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    font-weight: 600;
}

.trend-indicator.up {
    color: #39c46e;
}

.trend-indicator.down {
    color: #f44336;
}

@media (max-width: 1024px) {
    .stats-cards {
        grid-template-columns: repeat(2, 1fr);
    }
}

@media (max-width: 768px) {
    .stats-cards {
        grid-template-columns: 1fr;
    }
    
    .filter-group {
        flex-wrap: wrap;
    }
}
.main-content {
    overflow-x: hidden;
}

.analytics-container {
    padding-right: 10px;
}

.stats-cards,
.chart-section,
.details-section {
    animation: fadeIn 0.5s ease-in;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
